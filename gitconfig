[includeIf "hasconfig:remote.*.url:git@github.com:*/**"]
    path = ~/.gitconfig-github

[github]
	user = fweig

[url "git@github.com:"]
	pushInsteadOf = "https://github.com/"

[alias]
    alias = "!git config -l | sed -n 's/^alias\\.//p'"
    l = log --pretty='%C(auto)%cs %h%d %an: %s'
    st = status -s -uall

[init]
    defaultBranch = main

[pull]
    ff = only

[push]
    autoSetupRemote = true
    followTags = true
