[includeIf "hasconfig:remote.*.url:git@github.com:*/**"]
    path = ~/.gitconfig-github

[init]
    defaultBranch = main

[github]
	user = fweig

[url "git@github.com:"]
	pushInsteadOf = "https://github.com/"

[push]
    autoSetupRemote = true

[alias]
    l = log --pretty='%C(auto)%cs %h%d %an: %s'
    st = status -s -uno
